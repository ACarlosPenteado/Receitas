<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_dialog_restore"
    android:layout_width="280dp"
    android:layout_height="180dp"
    android:padding="10dp"
    android:background="@drawable/custom_tela1"
    android:layout_gravity="center_vertical|center_horizontal"
    tools:context=".Fragmentos.Frag_dialog_vazia">

    <TextView
        android:id="@+id/txtDeleta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Não há receitas, quer incluir?"
        android:textColor="@color/primary3"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:background="@drawable/custom_edtxt"
        android:gravity="center_horizontal"
        android:text="Cancelar"
        android:textAlignment="center"
        android:textColor="@color/primary2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDeleta"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/custom_edtxt"
        android:gravity="center_horizontal"
        android:text="Incluir"
        android:textAlignment="center"
        android:textColor="@color/primary2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDeleta"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>