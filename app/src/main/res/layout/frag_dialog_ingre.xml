<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_ingre"
    android:layout_width="255dp"
    android:layout_height="155dp"
    android:padding="10dp"
    android:background="@drawable/custom_tela2"
    android:layout_gravity="center_vertical|center_horizontal"
    tools:context=".Fragmentos.Frag_Busca_dialog">

    <TextView
        android:id="@+id/txtnome"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edTxqua_ing"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edtxt"
        android:gravity="center_horizontal|center_vertical"
        android:hint="999"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="3"
        android:textSize="15sp"
        android:textColor="#F48FB1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtnome"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:id="@+id/actvMedida1"
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edtxt"
        android:completionThreshold="2"
        android:dropDownWidth="150dp"
        android:ems="10"
        android:hint="Medida"
        android:imeOptions="actionNext"
        android:lines="1"
        android:nextFocusDown="@id/edTxing_rec"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:textColor="#F48FB1"
        android:windowSoftInputMode="stateHidden|adjustPan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/edTxqua_ing"
        app:layout_constraintTop_toBottomOf="@+id/txtnome"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <EditText
        android:id="@+id/edTxing_rec"
        android:layout_width="233dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edtxt"
        android:hint="Nome do ingrediente"
        android:importantForAutofill="no"
        android:inputType="textCapSentences"
        android:maxLength="27"
        android:nextFocusDown="@id/txOk"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:textColor="#F48FB1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actvMedida1"
        tools:ignore="HardcodedText,RtlSymmetry,UnknownIdInLayout" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edtxt"
        android:gravity="center_horizontal"
        android:text="Cancelar"
        android:textAlignment="center"
        android:textColor="@color/primary2"
        app:layout_constraintStart_toStartOf="@+id/edTxing_rec"
        app:layout_constraintTop_toBottomOf="@+id/edTxing_rec"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edtxt"
        android:gravity="center_horizontal"
        android:text="OK"
        android:textAlignment="center"
        android:textColor="@color/primary2"
        app:layout_constraintEnd_toEndOf="@+id/edTxing_rec"
        app:layout_constraintTop_toBottomOf="@+id/edTxing_rec"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>