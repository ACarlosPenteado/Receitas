<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:layout_width="170dp"
            android:layout_height="230dp"
            android:paddingBottom="20dp"
            android:background="@drawable/custom_edtxt_borda1"
            android:text="Doces"
            android:textAlignment="gravity"
            android:textSize="25sp"
            android:textColor="@color/primary3"
            android:drawablePadding="10dp"
            android:drawableBottom="@mipmap/ic_pudim_round"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:layout_width="170dp"
            android:layout_height="230dp"
            android:paddingBottom="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/custom_edtxt_borda1"
            android:text="Salgadas"
            android:textAlignment="gravity"
            android:textSize="25sp"
            android:textColor="@color/primary3"
            android:drawablePadding="10dp"
            android:drawableBottom="@mipmap/ic_empada_round"
            tools:ignore="ButtonStyle,HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/llDoces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="@drawable/custom_edtxt"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btnDoces"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:foreground="@android:color/transparent"
                android:gravity="center"
                android:text="Doces"
                android:textColor="@color/primary0"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgBtnDoce"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="16dp"
                android:contentDescription="Receitas Doces"
                android:src="@mipmap/ic_pudim_round"
                app:civ_border_color="@color/primary1"
                app:civ_border_width="2dp"
                tools:ignore="HardcodedText,UnusedAttribute" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSalgadas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/custom_edtxt"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btnSalgadas"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:foreground="@android:color/transparent"
                android:gravity="center"
                android:text="Salgadas"
                android:textColor="@color/primary0"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgBtnSalgada"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="16dp"
                android:contentDescription="Receitas Salgadas"
                android:src="@mipmap/ic_empada_round"
                app:civ_border_color="@color/primary1"
                app:civ_border_width="2dp"
                tools:ignore="HardcodedText,UnusedAttribute" />

        </LinearLayout>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>